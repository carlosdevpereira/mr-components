{
	"name": "@carlosdevpereira/mr-components",
	"version": "1.3.0",
	"author": "carlosdevpereira",
	"license": "MIT",
	"icon": "/docs/.vuepress/public/images/logo@2x.png",
	"homepage": "https://mr-components.carlosdevpereira.com",
	"description": "A set of lightweight Vue components to power @carlosdevpereira projects",
	"main": "./dist/mr-components.umd.js",
	"module": "./dist/mr-components.es.js",
	"repository": {
		"type": "git",
		"url": "https://github.com/carlosdevpereira/mr-components"
	},
	"files": [
		"dist"
	],
	"scripts": {
		"dev": "vuepress dev docs",
		"serve": "yarn dev",
		"build:docs": "vuepress build docs",
		"build:lib": "vite build",
		"build": "yarn build:lib && yarn build:docs",
		"test": "yarn test:unit --verbose",
		"test:watch": "yarn test --watch",
		"test:unit": "jest --no-cache --detectOpenHandles",
		"test:unit:coverage": "rm -rf ./coverage && jest --no-cache --detectOpenHandles --coverage",
		"lint": "eslint --ext .js,.vue --ignore-path .gitignore --fix src docs/.vuepress/components",
		"format": "prettier . --write"
	},
	"dependencies": {
		"core-js": "^3.6.5",
		"gsap": "^3.10.2",
		"lodash": "^4.17.21",
		"pinia": "^2.0.13",
		"remixicon": "^2.5.0",
		"vue": "^3.2.25"
	},
	"devDependencies": {
		"@babel/core": "^7.17.8",
		"@babel/preset-env": "^7.16.5",
		"@vitejs/plugin-vue": "^2.3.1",
		"@vue/component-compiler-utils": "^3.3.0",
		"@vue/test-utils": "^2.0.0-rc.19",
		"@vuepress/plugin-register-components": "^2.0.0-beta.38",
		"@vuepress/plugin-search": "^2.0.0-beta.41",
		"@vuepress/shared-utils": "^1.9.7",
		"autoprefixer": "^10.4.2",
		"babel-loader": "^8.2.3",
		"eslint": "^8.12.0",
		"eslint-plugin-vue": "^8.6.0",
		"jest": "^27.4.5",
		"postcss": "^8.4.6",
		"prettier": "^2.6.2",
		"regenerator-runtime": "^0.13.9",
		"sass": "^1.49.11",
		"sass-loader": "^12.6.0",
		"stylelint": "^14.6.1",
		"stylelint-config-recess-order": "^3.0.0",
		"tailwindcss": "^3.0.22",
		"ts-jest": "^27.1.4",
		"vite": "^2.9.1",
		"vue-loader": "^17.0.0",
		"vue-router": "^4.0.12",
		"vue3-jest": "^27.0.0-alpha.1",
		"vuepress": "^2.0.0-beta.41"
	},
	"browserslist": [
		"> 1%",
		"last 2 versions",
		"not dead"
	],
	"eslintConfig": {
		"root": true,
		"extends": [
			"plugin:vue/vue3-recommended"
		],
		"env": {
			"node": true
		},
		"parserOptions": {
			"ecmaVersion": 2020
		},
		"overrides": [
			{
				"files": [
					"**/__tests__/*.{j,t}s?(x)",
					"**/tests/unit/**/*.spec.{j,t}s?(x)"
				],
				"env": {
					"jest": true
				}
			}
		],
		"rules": {
			"operator-linebreak": [
				"error",
				"before"
			],
			"vue/no-unused-vars": "error",
			"vue/multi-word-component-names": "off",
			"template-curly-spacing": "off",
			"no-unused-vars": "warn",
			"vue/no-spaces-around-equal-signs-in-attribute": [
				"error"
			],
			"block-spacing": [
				"error",
				"always"
			],
			"no-multiple-empty-lines": [
				"error",
				{
					"max": 1,
					"maxEOF": 0
				}
			],
			"vue/max-len": [
				"error",
				{
					"code": 100,
					"template": 100,
					"tabWidth": 4,
					"comments": 80,
					"ignorePattern": "",
					"ignoreComments": false,
					"ignoreTrailingComments": true,
					"ignoreUrls": true,
					"ignoreStrings": true,
					"ignoreTemplateLiterals": false,
					"ignoreRegExpLiterals": true,
					"ignoreHTMLAttributeValues": true,
					"ignoreHTMLTextContents": true
				}
			],
			"vue/no-multi-spaces": [
				"error",
				{
					"ignoreProperties": false
				}
			],
			"space-before-function-paren": [
				"error",
				{
					"anonymous": "never",
					"named": "never",
					"asyncArrow": "always"
				}
			],
			"no-trailing-spaces": "error",
			"indent": [
				"error",
				"tab"
			],
			"vue/html-indent": [
				"error",
				"tab",
				{
					"attribute": 1,
					"baseIndent": 1,
					"closeBracket": 0,
					"alignAttributesVertically": true,
					"ignores": []
				}
			],
			"vue/script-indent": [
				"error",
				"tab",
				{
					"baseIndent": 0,
					"switchCase": 0,
					"ignores": []
				}
			],
			"vue/max-attributes-per-line": [
				"error",
				{
					"singleline": {
						"max": 1
					},
					"multiline": {
						"max": 1
					}
				}
			],
			"vue/first-attribute-linebreak": [
				"error",
				{
					"singleline": "beside",
					"multiline": "below"
				}
			],
			"vue/html-closing-bracket-spacing": [
				"error",
				{
					"startTag": "never",
					"endTag": "never",
					"selfClosingTag": "always"
				}
			],
			"vue/new-line-between-multi-line-property": [
				"error",
				{
					"minLineOfMultilineProperty": 2
				}
			],
			"vue/multiline-html-element-content-newline": [
				"error",
				{
					"ignoreWhenEmpty": true,
					"ignores": [
						"pre",
						"textarea",
						"small"
					],
					"allowEmptyLines": false
				}
			],
			"vue/singleline-html-element-content-newline": [
				"error",
				{
					"ignoreWhenNoAttributes": false,
					"ignoreWhenEmpty": true,
					"ignores": [
						"pre",
						"textarea",
						"small"
					]
				}
			],
			"vue/padding-line-between-blocks": [
				"error",
				"always"
			],
			"vue/component-tags-order": [
				"warn",
				{
					"order": [
						[
							"script",
							"template"
						],
						"style"
					]
				}
			],
			"vue/attributes-order": [
				"warn",
				{
					"order": [
						"DEFINITION",
						"CONDITIONALS",
						"LIST_RENDERING",
						"RENDER_MODIFIERS",
						"GLOBAL",
						[
							"UNIQUE",
							"SLOT"
						],
						"TWO_WAY_BINDING",
						"OTHER_DIRECTIVES",
						"OTHER_ATTR",
						"EVENTS",
						"CONTENT"
					],
					"alphabetical": false
				}
			],
			"vue/order-in-components": [
				"warn",
				{
					"order": [
						"el",
						"name",
						"key",
						"parent",
						"functional",
						[
							"delimiters",
							"comments"
						],
						[
							"components",
							"directives",
							"filters"
						],
						"extends",
						"mixins",
						[
							"provide",
							"inject"
						],
						"ROUTER_GUARDS",
						"layout",
						"middleware",
						"validate",
						"scrollToTop",
						"transition",
						"loading",
						"inheritAttrs",
						"model",
						[
							"props",
							"propsData"
						],
						"emits",
						"setup",
						"asyncData",
						"data",
						"fetch",
						"head",
						"computed",
						"watch",
						"watchQuery",
						"LIFECYCLE_HOOKS",
						"methods",
						[
							"template",
							"render"
						],
						"renderError"
					]
				}
			]
		}
	},
	"jest": {
		"moduleNameMapper": {
			"^@/(.*)$": "<rootDir>/src/$1",
			"^~(.*)$": "<rootDir>/node_modules/$1",
			"^.+\\.(css|scss)$": "<rootDir>/tests/transformers/cssTransform.js"
		},
		"moduleFileExtensions": [
			"vue",
			"js",
			"json",
			"jsx"
		],
		"testEnvironment": "jsdom",
		"transform": {
			"^.+\\.vue$": "vue3-jest",
			"^.+\\js$": "babel-jest",
			"^.+\\.svg$": "./tests/transformers/svgTransform.js"
		},
		"setupFilesAfterEnv": [
			"./tests/unit/setup-tests.js"
		],
		"transformIgnorePatterns": [
			"/node_modules/",
			"\\.pnp\\.[^\\/]+$"
		],
		"coverageReporters": [
			"text-summary",
			"clover",
			"html",
			"lcov"
		]
	},
	"gitHooks": {
		"pre-commit": "lint-staged"
	},
	"lint-staged": {
		"*.{js,jsx,vue,ts,tsx}": [
			"npm run lint",
			"git add"
		]
	}
}
